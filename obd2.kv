        Button:
            text: root.btn
            size_hint_x: 0.4
            size_hint_y: 0.1
            font_style: 'Subtitle1'
            pos_hint: {'center_x': .5, 'center_y': 1/5}
            on_press: root.press(self)
        Label:
            text: root.status
            id: status
            color: [1,0,0,0.7]
            halign: 'center'
            pos_hint: {'center_y': .1}

